@using Microsoft.AspNetCore.Components.Forms

<h1>EditBool Demo</h1>

<EditForm Model="@_model" class="flex-row flex-wrap">
    <ObjectGraphDataAnnotationsValidator />

    <div class="demo-section">
        <h2>Basic Usage</h2>
        <EditBool @bind-Value="_model.BasicCheckbox" Field="@(() => _model.BasicCheckbox)" />
    </div>

    <div class="demo-section">
        <h2>Label Variations</h2>
        <EditBool @bind-Value="_model.WithHtmlLabel" Field="@(() => _model.WithHtmlLabel)" />
    </div>

    <div class="demo-section">
        <h2>Custom Styling</h2>
        <EditBool @bind-Value="_model.CustomClass"
                 ContainerClass="my-custom-container"
                 class="my-custom-checkbox"
                 Field="@(() => _model.CustomClass)" />
    </div>

    <div class="demo-section">
        <h2>State Options</h2>
        <EditBool @bind-Value="_model.DisabledField"
                 IsDisabled="true"
                 Field="@(() => _model.DisabledField)" />
    </div>

</EditForm>

@code {
    private DemoEditBoolModel _model = new();

    public class DemoEditBoolModel
    {
        public bool BasicCheckbox { get; set; }
        public bool WithHtmlLabel { get; set; }
        public bool NoLabel { get; set; }
        public bool CustomClass { get; set; }

        [Required(ErrorMessage = "This checkbox must be checked")]
        public bool RequiredField { get; set; }
        
        public bool DisabledField { get; set; }
        public bool ShowBoundValue { get; set; }
    }
}

<style>
    .demo-section {
        margin: 1rem;
        padding: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        min-width: 300px;
    }

    .my-custom-container {
        background-color: #f5f5f5;
        padding: 10px;
        border-radius: 4px;
    }

    .my-custom-checkbox {
        transform: scale(1.2);
    }
</style>