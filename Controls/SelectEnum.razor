@using Controls.Helpers
@using Microsoft.AspNetCore.Components.Forms
@typeparam TEnum

@inherits InputBase<TEnum>

<select @bind:get=Value @bind:set=SetAsync @bind:event="onchange" class=@CssClass id=@_id>
    @foreach (var x in GetOptions())
    {
        <option id=@($"{_id}-option-{x}") value=@x>@x?.GetName()</option>
    }
</select>